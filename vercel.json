{
  "version": 2,
  "buildCommand": "npm ci --prefer-offline --no-audit && cd frontend && npm ci --prefer-offline --no-audit --legacy-peer-deps && npm run build",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backend/**/*"
      }
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "cleanUrls": true
}
