{
  "version": 2,
  "buildCommand": "bash build-prod.sh",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backend/**/*",
        "zeroConfig": true
      }
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static",
      "config": {
        "maxAge": 3600
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CI": "true"
  },
  "cleanUrls": true,
  "trailingSlash": false
}

